{% extends 'base.twig' %}

{% block content %}

<h2>New user</h2>

<b>{{ flash.info|raw}}</b> <br />
<b>{{ flash.error|raw }}</b> <br />

<form method="POST">

    
    <input type="text" id = "fullname " name = "fullname" value = "{{ fullname }}" placeholder="Fullname" /><label id = "err_fullname" for="fullname" value="{{ fullname }}"></label><br/>
    <!--(Will not be visible for other users)-->

    <input type ="text" name = "address" value = "{{ address }}" placeholder="Address" /><br/>
    <!--(Will not be visible for other users)-->

    <input type = "text" name = "postcode" value = "{{ postcode }}" placeholder="Postcode" /><br/>
    <!--(Will not be visible for other users)-->

    <input type = "text" name = "email" value = "{{ email }}" placeholder="Email" /><br/>

    <br />

    <input type="text" name="user" value="{{ username }}" placeholder="Username" required /> <br />
  
    <input type="password" name="pass_one" placeholder="Password" required /> <br />
    <!--(Will not be visible for other users)-->
    <input type="password" name="pass_two" placeholder="Re-type password" required /> <br />
    <!--(Will not be visible for other users)-->

    <br />
    <input type="submit" name="submit" value="Create new user"> <br/>

</form>
{% endblock %}
