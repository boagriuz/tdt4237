{% extends 'base.twig' %}

{% block content %}

<h2>New user</h2>

<b>{{ flash.info}}</b> <br />
<b>{{ flash.error }}</b> <br />

<form action="" method="POST">

    
    <input type="text" name = "fullname" placeholder="Fullname" /><br/>
    <!--(Will not be visible for other users)-->

    <input type ="text" name = "address" placeholder="Address" /><br/>
    <!--(Will not be visible for other users)-->

    <input type = "text" name = "postcode" placeholder="Postcode" /><br/>
    <!--(Will not be visible for other users)-->

    <input type = "text" name = "email" placeholder="Email" /><br/>
    <!--(Will not be visible for other users)-->

    <br />

    <input type="text" name="user" value="{{ username }}" placeholder="Username" /> <br />
  
    <input type="password" name="pass_one" placeholder="Password" /> <br />
    <!--(Will not be visible for other users)-->
    <input type="password" name="pass_two" placeholder="Retype-password" /> <br />
    <!--(Will not be visible for other users)-->

    <br />
    <input type="submit" name="submit" value="Create new user"> <br/>

</form>
{% endblock %}
